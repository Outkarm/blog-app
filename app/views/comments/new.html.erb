<section class=''>
  <h1 class=''>Create a new Comment.</h1>

  <%= form_with model: @comments, url: user_post_comments_path do |form| %>
    <div class='form_title'>
      <%= form.label :text, 'Comment' %>
      <%= form.text_area :text, placeholder: 'Type your comment here...', required: true, class: 'comment_input' %>
    </div>

    <div class='btn'>
      <%= form.submit "Add Comment" %>
    </div>
  <% end %>
</section>